{
	"name": "Internet Distance Traveller",
	"version": "0.0.1",
	"manifest_version": 2,
	"minimum_chrome_version": "23",
	"description": "An app that tracks the distance your internet data travels around the world.",
	"icons": {
		"16": "assets/icon.png",
		"128": "assets/icon.png"
	},
	"app": {
    "background": {
      "scripts": ["main.py"]
    }
  },
	"offline_enabled": true,
	"permissions": ["geolocation",
									"storage",
									"notifications",
									"<all_urls>"
								 ]
}