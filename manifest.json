{
    "manifest_version": 3,
    "name": "Chrome Plugin2",
    "description": "Description1",
    "version": "0.1",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "declarative_net_request" : {
        "rule_resources" : [{
          "id": "ruleset_1",
          "enabled": true,
          "path": "rules_1.json"
        }, {
          "id": "ruleset_2",
          "enabled": false,
          "path": "rules_2.json"
        }]
      },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon.jpg",
            "32": "/images/icon.jpg",
            "48": "/images/icon.jpg",
            "128": "/images/icon.jpg"
          }
    },
    "options_page": "options.html"
}